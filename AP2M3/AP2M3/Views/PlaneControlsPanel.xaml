<UserControl x:Class="AP2M3.Views.PlaneControlsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AP2M3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <!-- Manual tab (Manual Controls) -->
            <TabItem Style="{StaticResource BoldyTab}" Header="Manual">
                <local:ManualControls />
            </TabItem>
            <!-- Automatic tab (Script Interpreter) -->
            <TabItem Style="{StaticResource BoldyTab}" Header="Auto Pilot">
                <local:AutoPilotControls/>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
